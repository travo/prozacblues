:javascript
  $(function(){

    $('#beam-button').click( function(event) {
      var isOff = this.src.indexOf('beamOff') >= 0;
      if (isOff) {
        $(this).attr('src', '../images/beamOn.jpg')
        $('img.joe-guitar').attr('src', '../images/joeGuitarOn.jpg')
      } else {
        $(this).attr('src', '../images/beamOff.jpg')
        $('img.joe-guitar').attr('src', '../images/joeGuitarOff.jpg')
      }

    });

  });
